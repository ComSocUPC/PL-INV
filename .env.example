# üåü Variables de Entorno - Sistema de Inventario
# Copia este archivo a .env y configura tus valores

# üóÑÔ∏è Base de Datos PostgreSQL
POSTGRES_DB=inventory_db
POSTGRES_USER=admin
POSTGRES_PASSWORD=secure_password_123
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# üîê Configuraci√≥n JWT
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-secure
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# ‚ö° Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# üì° MQTT Broker para IoT
MQTT_BROKER_URL=mqtt://mosquitto:1883
MQTT_HOST=mosquitto
MQTT_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=

# üåç Configuraci√≥n de Entorno
NODE_ENV=development
LOG_LEVEL=info
LOG_FORMAT=json

# üö™ Puertos de Servicios (para desarrollo local)
API_GATEWAY_PORT=3000
AUTH_SERVICE_PORT=3001
PRODUCT_SERVICE_PORT=3002
INVENTORY_SERVICE_PORT=3003
IOT_SERVICE_PORT=3004
FRONTEND_PORT=3005

# üîó URLs de Servicios (para comunicaci√≥n interna)
AUTH_SERVICE_URL=http://auth-service:3001
PRODUCT_SERVICE_URL=http://product-service:3002
INVENTORY_SERVICE_URL=http://inventory-service:3003
IOT_SERVICE_URL=http://iot-service:3004

# üé® Frontend Configuration
REACT_APP_API_URL=http://localhost:3000/api
REACT_APP_WS_URL=ws://localhost:3000

# üîí Seguridad
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
CORS_ORIGIN=http://localhost:3005
BCRYPT_ROUNDS=12

# üîß Cache Configuration
CACHE_TTL=3600
CACHE_MAX_KEYS=1000

# üì± IoT Device Configuration
NFC_READER_ENABLED=true
TEMPERATURE_SENSOR_ENABLED=true
MOTION_SENSOR_ENABLED=true
NFC_READER_PORT=/dev/ttyUSB0
SENSOR_SCAN_INTERVAL=30000
DEVICE_TIMEOUT=5000

# üö® Alertas y Notificaciones
LOW_STOCK_THRESHOLD=10
ALERT_EMAIL_ENABLED=false
ALERT_EMAIL_SMTP_HOST=smtp.gmail.com
ALERT_EMAIL_SMTP_PORT=587
ALERT_EMAIL_USER=your-email@gmail.com
ALERT_EMAIL_PASS=your-email-password
ALERT_EMAIL_FROM=noreply@inventory-system.com

# üåê API Configuration
API_VERSION=v1
MAX_REQUEST_SIZE=10mb
REQUEST_TIMEOUT=30000

# üìÑ File Upload (si se implementa)
UPLOAD_DIR=/uploads
MAX_FILE_SIZE=5mb
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf

# üìä Monitoreo (opcional)
ENABLE_METRICS=false
PROMETHEUS_PORT=9090
GRAFANA_PORT=3006

